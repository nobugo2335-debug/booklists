// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // または "mysql", "sqlite" など
  url      = env("DATABASE_URL")
}

// BookList.tsxで定義されたBookインターフェースに対応するモデル
model Book {
  id          String   @id @default(uuid())
  shelfNo     String
  title       String
  author      String?  // nullが許容されるため String?
  description String?  // nullが許容されるため String?
  status      String   @default("available") // 'available' | 'on_loan' などの値を格納
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
